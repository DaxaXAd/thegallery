{# templates/post/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Posts List{% endblock %}

{% block body %}
    <h1>Posts List</h1>

    <a href="{{ path('app_post_new') }}">Create new post</a>

    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('app_post_show', {'id': post.id}) }}">{{ post.title }}</a>
                <p>{{ post.summary }}</p>
            </li>
        {% else %}
            <li>No posts found.</li>
        {% endfor %}
    </ul>
{% endblock %}