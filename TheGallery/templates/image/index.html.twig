{% extends 'base.html.twig' %}

{% block body %}
	<h1>Images</h1>
	{% for image in images %}
		<div class="container-card gapper">
			<div class="card-author">
				<div class="author">
					<p>{{ image.getTitle() }}</p>
				</div>
				<img class="underline" src=""/>
				<div class="preview-img">
					<img src="{{ asset('' ~ image.path) }}" alt="{{ image.title }}" style="max-width: 100px;">
				</div>
				<div class="tag-input-select">
					<div class="overlap-group">
						<div class="text-wrapper">tag#1</div>
					</div>
				</div>
				<img aria-label="button like" class="pixelarticons-heart"/>
				<span class="like-count">0</span>
			</div>
			
		</div>
		{% if app.user == image.idUser %}
		<div class="gallery-overlay">
			<div class="gallery-text">
				<a href="{{ path('app_image_edit', {'id': image.id}) }}">Edit</a>
				<a href="{{ path('app_image_delete', {'id': image.id}) }}" onclick="return confirm('Are you sure?')">Delete</a>
			</div>
		</div>
		{% endif %}
	{% endfor %}
	<a href="{{ path('app_image_new') }}" class="create-new-link">Create new</a>
{% endblock %}
