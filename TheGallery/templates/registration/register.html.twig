{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<main>
		<a href="{{path('home')}}">
					<svg class="goback-sign" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
						<polygon points="7.293 4.707 14.586 12 7.293 19.293 8.707 20.707 17.414 12 8.707 3.293 7.293 4.707"/>
					</svg>
				</a>
	{# <div class="register-container"> #}
		<div class="register-page">
			{# <div class="box-logo">
							<img src="{{ asset('images/star_blue.svg') }}" class="logo logo-register" alt="Logo TheGallery">
						</div> #}

			<h1 class="h1-register">Create your own account !</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm, { 'attr': {'class': 'form-register'} }) }}


			<div class="form-group">
				{{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'label-register'}}) }}
				{{ form_widget(registrationForm.username, {'attr': {'class': 'input-register', 'placeholder': 'Username'}}) }}
				
			</div>

			<div class="form-group">
				{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'label-register'}}) }}
				{{ form_widget(registrationForm.email, {'attr': {'class': 'input-register', 'placeholder': 'ex: email@mail.com'}}) }}
				
			</div>

			<div class="form-group">
				{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'label-register'}}) }}
				{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input-register', 'placeholder': 'more than 8 characters'}}) }}
				
			</div>

			<div class="form-group">
				{{ form_label(registrationForm.bio, 'biographie', {'label_attr': {'class': 'label-register'}}) }}
				{{ form_widget(registrationForm.bio, {'attr': {'class': 'input-register', 'placeholder': "Hello, it's bio about me"}}) }}
				
			</div>

			<div class="form-group">
				{{ form_label(registrationForm.location, 'Localisation', {'label_attr': {'class': 'label-register'}}) }}
				{{ form_widget(registrationForm.location, {'attr': {'class': 'input-register', 'placeholder': 'ex: France' }}) }}
				
			</div>


			<div class="form-group agree-terms">
				{{ form_label(registrationForm.agreeTerms, 'I accept the conditions', {'label_attr': {'class': 'label-agree-terms'}}) }}
				{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox-register'}}) }}
				
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="form-group">
				<button type="submit" class="signup-btn">
					Sign up
				</button>
			</div>

			{{ form_end(registrationForm) }}
		</div>
	{# </div> #}
	</main>

	<footer>&copy; Copyright 2025 - TheGallery</footer>

{% endblock %}
