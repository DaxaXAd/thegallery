{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<main class="user-profile-page">
    {% if app.user == user %}
        
            <h1>{{ user.username }}'s Profile</h1>

            <div class="user-infos">
                <div>
                    <img src="{{ asset(user.profilePic) }}" alt="Photo de profil" style="max-width: 200px;"/>
                </div>
                <div><p>Email: {{ user.email }}</p></div>
                <div><p>Username: {{ user.username }}</p></div>
                <div><p>Bio: {{ user.bio }}</p></div>
                <div><p>Location: {{ user.location }}</p></div>
            </div>

            <h1>{{ user.username }}'s Posts</h1>



            <div class="container">
			<div class="row">
				{% for post in posts %}
					{# <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"> #}
					<div class="col-lg-4 col-md-6 col-sm-12 mb-4">
						<div class="posts-lists">
							<div class="container-card gapper">
								<div class="card-author">
									<div class="author">
										<h2><a href="{{ path('app_post_show', {'id': post.id}) }}">{{ post.title }}</a></h2>
										{# <h3> by <a href="{{ path('app_user_show', {'slug': post.idUser.slug}) }}">{{ post.idUser.username }}</a></h3> #}
										<img class="underline" src=""/>
									</div>
									
									{% if post.idImg %}
										<div class="preview-img">
											<a href="{{ path('app_post_show', {'id': post.id}) }}">
												<img src="{{ asset(post.idImg.path) }}" alt="{{ post.title }}">
											</a>
										</div>
									{% endif %}
									<div class="tag-input-select">
										<div class="overlap-group">
											<div class="text-wrapper">tag#1</div>
										</div>
									</div>
									<form action="{{ path('app_like', { 'id': post.id }) }}" method="POST" class="like-form" style="display: inline-block;">
									<!-- Le bouton est l'icône, stylisée comme tu veux -->
										<button type="submit" class="like-button pixelarticons-heart like stop-scroll" post-like="{{ post.id }}">
											<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="heart-svg">
											<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
											</svg>
										</button>
										<span class="like-count">{{ likeCount[post.id] }}</span>
									</form>
									{# <img aria-label="button like" class="pixelarticons-heart like"/> #}
									{# <img aria-label="button like" class="pixelarticons-heart like like-button" post-like="{{ post.id }}" /> #}
									
									<div class="post-actions">
									{% if app.user == post.idUser %}
										<a href="{{ path('app_post_edit', {'id': post.id}) }}" class="edit-btn">Edit</a>
										{{ include('post/_delete_form.html.twig', {'post': post}) }}
									{% endif %}
									</div>
								</div>
							</div>
						</div>
					</div>
				{% else %}
					<p>No posts found.</p>
				{% endfor %}
			</div> {# close row #}
		</div> {# close container #}

        <a href="{{ path('app_post_index') }}">back to list</a>

        <a href="{{ path('app_user_edit', {'slug': user.slug}) }}">edit</a>

        {{ include('user/_delete_form.html.twig') }}
    {% endif %}
</main>
{% endblock %}
